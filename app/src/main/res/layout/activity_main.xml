<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <Button
                android:id="@+id/btn_clear"
                android:text="@string/operator_clear"></Button>

            <Button
                android:id="@+id/btn_divide"
                android:text="@string/operator_divide"></Button>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_7"
                android:text="@string/num_7"></Button>

            <Button
                android:id="@+id/btn_8"
                android:text="@string/num_8"></Button>

            <Button
                android:id="@+id/btn_9"
                android:text="@string/num_9"></Button>

            <Button
                android:id="@+id/btn_multiply"
                android:text="@string/operator_multiply"></Button>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_4"
                android:text="@string/num_4"></Button>

            <Button
                android:id="@+id/btn_5"
                android:text="@string/num_5"></Button>

            <Button
                android:id="@+id/btn_6"
                android:text="@string/num_6"></Button>

            <Button
                android:id="@+id/btn_minus"
                android:text="@string/operator_minus"></Button>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_1"
                android:text="@string/num_1"></Button>

            <Button
                android:id="@+id/btn_2"
                android:text="@string/num_2"></Button>

            <Button
                android:id="@+id/btn_3"
                android:text="@string/num_3"></Button>

            <Button
                android:id="@+id/btn_plus"
                android:text="@string/operator_plus"></Button>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_0"
                android:text="@string/num_0"></Button>

            <Button
                android:id="@+id/btn_asterisk"
                android:text="@string/operator_asterisk"></Button>

            <Button
                android:id="@+id/btn_erase"
                android:text="@string/operator_erase"></Button>

            <Button
                android:id="@+id/btn_equals"
                android:text="@string/operator_equals"></Button>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>